<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
<%= f.label :name %><br>
<%= f.text_field :name %><br>
<%= f.label :cost %><br>
<%= f.number_field :cost, value: @product.cost ? '%.2f' % @product.cost : nil, min: 0, step: 0.01%><br>
<%= f.label :country_of_origin %><br>
<%= f.text_field :country_of_origin %><br>
<%= f.label :zip %><br>
<%= f.text_field :zip %><br>
<%= f.submit  %>
<% end %>
