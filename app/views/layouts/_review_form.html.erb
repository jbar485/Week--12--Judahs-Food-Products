<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %><br>
  <%= f.text_field :author %><br>
  <%= f.label :content_body %><br>
  <%= f.text_area :content_body %><br>
  <%= f.label :rating %>(1-5)<br>
  <%= f.number_field :rating, min: 1, max: 5, step: 1  %><br>
  <%= f.submit %>
<% end %>
