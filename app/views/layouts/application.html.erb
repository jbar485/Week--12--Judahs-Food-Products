
<!DOCTYPE html>
<html>
<head>
  <title>JudahsFoodProducts</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="foreground">
    <header class='clearfix'>
      <div class="right-nav">
        <ul>
          <li><%= link_to "Products", products_path %></li>
        </ul>
      </div>
      <div class="right-nav">
        <ul>
          <li><%= link_to "Home", root_path %></li>
        </ul>
      </div>
      <div class="left-nav">
        <ul>
          <% if current_user %>
          <%= current_user.email %> | <%= ( current_user.admin === true ? "Admin" : "User" ) %> | <%= link_to "Sign out", '/signout' %>
          <% else %>
          <%= link_to "Sign up", 'signup' %> | <%= link_to "Sign-in", '/signin' %>
          <% end %>
        </ul>
      </div>
    </header>
    <div class="store_name tracking-in-contract-bck">
      <h1>Judah 1nc.</h1>
    </div>

    <%= flash[:alert] %>
    <%= flash[:notice] %>


    <div class='content'>
      <%= yield %>
    </div>
  </div>

  <div class="midground">

  </div>

  <div class="background">
  </div>
</body>
</html>
